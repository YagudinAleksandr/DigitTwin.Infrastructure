# Уникальный ID ноды Kafka
KAFKA_CFG_NODE_ID=0

# Роли ноды: брокер + контроллер
KAFKA_CFG_PROCESS_ROLES=broker,controller

# Кворум контроллеров (только одна нода с ID=0)
KAFKA_CFG_CONTROLLER_QUORUM_VOTERS=0@kafka:9093

# Слушаемые порты:
# - PLAINTEXT://0.0.0.0:9092 — для клиентов (включая ваши микросервисы)
# - CONTROLLER://0.0.0.0:9093 — для внутреннего управления
KAFKA_CFG_LISTENERS=PLAINTEXT://0.0.0.0:9092,CONTROLLER://0.0.0.0:9093

# Адреса, по которым клиенты **должны подключаться** к брокеру
# ВАЖНО: использовать имя сервиса из docker-compose (kafka), а не localhost
KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092

# Соответствие имён слушателей и протоколов
KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT

# Имя слушателя, используемого для связи между брокерами (в KRaft — только один брокер, но всё равно нужно)
KAFKA_CFG_INTER_BROKER_LISTENER_NAME=PLAINTEXT

# Имя слушателя, используемого контроллером
KAFKA_CFG_CONTROLLER_LISTENER_NAMES=CONTROLLER